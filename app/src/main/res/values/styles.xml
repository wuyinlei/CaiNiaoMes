<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!--未读消息style-->
    <style name="unread_messages">
        <item name="android:textSize">@dimen/remind_message_text_size</item>
        <item name="android:layout_width">@dimen/remind_message_width</item>
        <item name="android:layout_height">@dimen/remind_message_height</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:background">@drawable/remind_message_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <!-- 右上角popupwindow -->
    <style name="AnimationPreview">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>


</resources>
